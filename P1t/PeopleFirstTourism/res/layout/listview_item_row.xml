<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" 
    android:stretchColumns="0">
    <TableRow>
        
        <TextView android:text="ServiceName" android:id="@+id/list_itm_service_name"
            android:padding="3dip" android:textStyle="bold" 
            android:gravity="left" android:textSize="20dip"
            android:maxLength="20" />
       
    </TableRow>
    <TableRow>
        <TextView android:text="Distance" android:gravity="left"
            android:layout_span="1" android:id="@+id/list_item_distance"
            android:padding="3dip" android:textSize="20dip" />
    </TableRow>
</TableLayout>